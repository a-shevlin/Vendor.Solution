@{
  Layout = "_Layout";
}
<div class="header">
  <h1>Add Order</h1>
</div>
<div>
  <h2>Add a new order for @Model.Name</h2>
  <form action="/vendor/@Model.Id/order" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="Model.Id">
    <label for="orderTitle">Order Title:</label>
    <input id="orderTitle" name="orderTitle" type="text" requited>
    <br>
    <label id="orderDescription">Order Description:</label>
    <input id="orderDescription" name="orderDescription" type="text" required>
    <br>
    <label for="orderDate">Order Date:</label>
    <input id="orderDate" name="orderDate" type="date" required>
    <br>
    <button type="submit" class="btn">Add Order</button>
  </form>
</div>