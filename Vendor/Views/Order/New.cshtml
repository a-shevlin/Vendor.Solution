@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h1>Add Order</h1>
</div>
<div class="container">
  <h2>Add a new order for @Model.Name</h2>
  <form action="/vendor/@Model.Id/orders" method="post">
    <input id="id" name="id" type="hidden" value="Model.Id">
    <label for="title">Order Title:</label>
    <input id="title" name="title" type="text" required>
    <br>
    <label id="description">Order Description:</label>
    <input id="description" name="description" type="text" required>
    <br>
    <label for="price">Order Price:</label>
    <input id="price" name="price" type="int" required>
    <br>
    <label for="date">Order Date:</label>
    <input id="date" name="date" type="date" required>
    <br>
    <button type="submit" class="btn-md">Add Order</button>
  </form>
</div>