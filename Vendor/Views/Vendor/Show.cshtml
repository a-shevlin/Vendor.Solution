@{
  Layout = "_Layout";
}
@using Vendor.Models;

<div class="jumbotron">
  <h1 class="display-5">@Model["vendor"].Name's Orders.</h1>
  <hr>
  <h5 class="lead">Description: @Model["vendor"].Description</h5>
</div>
<div class="container">
  <h4>Order Log:</h4>
  @if (@Model["vendor"].Orders.Count == 0)
  {
    <p>This vendor has no previous orders.</p>
  }
  <ul>
    @foreach (Order order in @Model["orders"])
    {
      <li>
        <a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Date : @order.Title</a>
      </li>
    }
  </ul>
  <a href='/vendor/@Model["vendor"].Id/order/new' id="btn-add" class="btn-link">Add a new order!</a>
  <br>
  <br>
  <a href='/' class="btn-link">Return to Main Page!</a>
  <a href='/vendor' class="btn-link">Return to Vendor List!</a>
  <br>
  <br>
  <form action='/vendor/@Model["vendor"].Id' method="post">
    <button type="submit" id="btn-del"class="btn-md">Delete this Vendor!</button>
    <h5>Warning! This action can not be undone!</h5>
  </form>
</div>